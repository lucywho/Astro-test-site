---
const { title } = Astro.props
const url = new URL(Astro.request.url).pathname
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>
	
	<body class="bg-gray-200 flex flex-col min-h-screen">
		<div class="pt-8 flex-grow">
	
			<nav class="flex justify-center space-x-10 pb-8">
				<a href="/" class={url === "/" ? "font-medium text-blue-600 hover:text-gray-600" : "font-medium text-gray-500 hover:text-gray-900"}>Home</a>
				<a href="/pricing" class={url === "/pricing" ? "font-medium text-blue-600 hover:text-gray-600" : "font-medium text-gray-500 hover:text-gray-900"}>Pricing</a>
				<a href="/blog" class={url === "/blog" ? "font-medium text-blue-600 hover:text-gray-600" : "font-medium text-gray-500 hover:text-gray-900"}>Blog</a>
				<a href="/login" class={url === "/login" ? "font-medium text-blue-600 hover:text-gray-600" : "font-medium text-gray-500 hover:text-gray-900"}>Login</a>
				<a href="/signup" class="font-medium text-white hover:bg-blue-600 bg-blue-500 px-3 py-2 -mt-2 rounded-lg">Sign
					up</a>
			</nav>
	
			<h1 class="mt-5 text-center text-3xl mb-5 font-extrabold tracking-tight text-gray-900">
				{title}
			</h1>
	
			<div class="mt-10 mx-auto text-center max-w-3xl px-10 ">

	      <slot />

	    </div>		
	</div>
	</body>
    <footer class="mt-5 py-4 border-t-2 bg-gray-500 ">
		<nav class="flex justify-center pb-4 space-x-10 ">
			<a href="/" class={url === "/" ? "font-medium text-gray-300 " : "font-medium text-gray-800 hover:text-blue-700"} >Home</a>
			<a href="/pricing" class={url === "/pricing" ? "font-medium text-gray-300" : "font-medium text-gray-800 hover:text-blue-700"} >Pricing</a>
			<a href="/blog" class={url === "/blog" ? "font-medium text-gray-300" : "font-medium text-gray-800 hover:text-blue-700"} >Blog</a>
		</nav>
			<p class="text-center text-gray-300">&copy; 2022 Great Tool. All rights reserved.</p>
	</footer>
</html>